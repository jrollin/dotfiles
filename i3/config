# lock screen
set $Locker i3lock -c 000000 -f -i ~/.i3/locked.png

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Escape mode "$mode_system"
bindsym XF86PowerOff mode "$mode_system"

#screen with flameshot
bindsym Print       exec flameshot full
bindsym Shift+Print exec flameshot gui

# app launcher
set $mode_launcher Launch: [f]irefox [s]lack [c]hrome [p]flameshot [v]scode  
bindsym $mod+n mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox, mode "default"
    bindsym s exec slack, mode "default"
    bindsym c exec google-chrome, mode "default"
    bindsym v exec code, mode "default"
    bindsym p exec flameshot gui, mode "default"
    
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
